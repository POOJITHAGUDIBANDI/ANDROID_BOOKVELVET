<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:background="@drawable/a2"

    tools:context=".Alert">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:text="One Time Alarm"
        android:textSize="16sp"

        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/ib_once_date"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_calendar_month_24black"
            style="@style/Widget.AppCompat.ImageButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_once_date"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/ib_once_time"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_access_time_24black"
            style="@style/Widget.AppCompat.ImageButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_once_time"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AlarmMessage"

        android:layout_marginBottom="16dp"
        android:id="@+id/et_once_message"/>



    <Button
        android:layout_width="match_parent"
        android:background="#14B3C6"
        android:layout_height="wrap_content"
        android:id="@+id/btn_set_once_alarm"
        android:text="Set One Time Alarm"
        android:layout_marginBottom="16dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeating Alarm"


        android:textSize="16sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/ib_repeating_date"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_calendar_month_24black"
            style="@style/Widget.AppCompat.ImageButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_repeating_date"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/ib_repeating_time"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_access_time_24black"
            style="@style/Widget.AppCompat.ImageButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_repeating_time"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AlarmMessage"

        android:layout_marginBottom="16dp"
        android:id="@+id/et_repeating_message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        >
        <Button
            android:layout_width="match_parent"
            android:background="#14B3C6"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_set_repeating_alarm"
            android:text="Set Repeat Time Alarm"

            android:layout_marginRight="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:background="#14B3C6"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel_repeating_alarm"
            android:text="Cancel Repeat Time Alarm"

            android:layout_marginLeft="8dp"/>


    </LinearLayout>







</LinearLayout>